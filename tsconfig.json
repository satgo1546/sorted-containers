{
	"include": ["src"],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts",
		"**/*.bench.ts",
		"src/benchmark-utils.ts",
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "nodenext",
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"stripInternal": true,
	},
}
